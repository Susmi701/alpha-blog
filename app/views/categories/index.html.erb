<h1 class="text-center mt-4">Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<div class="container ">
    <% @categories.each do |category| %>
        <div class="row justify-content-md-center  ">
            <div class="col-3 mt-4  ">
                <div class="card text-center shadow mb-5 bg-body rounded">                
                    <div class="card-body ">
                        <h5 class="card-title "><%= link_to category.name,category_path(category),class: "text-success"%></h5>                     
                    <h5 class="card-title mt-3"><%= pluralize(category.articles.count,"article")%></h5>
                     <%= link_to 'Show', category_path(category),class: "btn btn-outline-success" %>
                                <%if logged_in && current_user.admin%>
                                    <%= link_to 'Edit', edit_category_path(category),class: "btn btn-outline-primary"%>
                                    
                                <%end %>
                        
                    </div>
                     <div class="card-footer text-muted text-center">
                        <small>Created <%= time_ago_in_words(category.created_at)%> ago,
                            edited <%= time_ago_in_words(category.updated_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>     
</div>   
<div class="flickr_pagination mb-3">
    <%= will_paginate @categories, :container => false %>
</div>