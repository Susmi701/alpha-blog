<h1 class="text-center m-4">Login</h1>
<div class="container ">
    <div class="col-5 mx-auto ">
        <div class="row justify-content-center ">
            <%= form_with(scope: :session, url: login_path, class:"custom-bg shadow mb-3 rounded",local: true ) do |f| %>
                <div class=" form-group pt-3  row ">
                    <%= f.label :email, class:"col-sm-2 col-form-label fs-5" %>
                    <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control shadow mb-3  rounded ",  rows:"10",placeholder: "Enter your Email" %>
                    </div>
                </div>
                <div class=" form-group pt-3  row ">
                    <%= f.label :password, class:"col-sm-2 col-form-label fs-5" %>
                    <div class="col-sm-10">
                    <%= f.password_field :password, class: "form-control shadow mb-3  rounded ",  rows:"10",placeholder: "Enter your Password" %>
                    </div>
                </div>

                <div class=" col text-center">
                        <%= f.submit "Login", class: "btn btn-outline-success btn-lg my-4" %>
                </div>
            </div>        
        <% end %>
        <div class="col text-center mb-4">
           <%= link_to "Cancel and return to articles",articles_path, class: "text-secondary " %>
        </div>
    </div>
</div>
