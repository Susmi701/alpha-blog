<div class="container ">
    <div class="col-10 mx-auto ">
        <div class="row justify-content-center ">
            <%= render 'shared/validation_messages', obj: @user%>
            <%= form_with model: @user,class:"custom-bg shadow mb-3 rounded" do |f| %>
                <div class=" form-group pt-4 row ">
                    <%= f.label :username ,class: "col-sm-2 col-form-label  fs-5" %>
                    <div class="col-sm-10">
                    <%= f.text_field :username, class: "form-control shadow rounded ",placeholder: "Enter a username" %>
                    </div>
                </div>
                <div class=" form-group pt-3  row ">
                    <%= f.label :email, class:"col-sm-2 col-form-label fs-5" %>
                    <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control shadow mb-3  rounded ",  rows:"10",placeholder: "Enter a Email" %>
                    </div>
                </div>
                <div class=" form-group pt-3  row ">
                    <%= f.label :password, class:"col-sm-2 col-form-label fs-5" %>
                    <div class="col-sm-10">
                    <%= f.password_field :password, class: "form-control shadow mb-3  rounded ",  rows:"10",placeholder: "Choose a Password" %>
                    </div>
                </div>

                <div class=" col text-center">
                        <%= f.submit class: "btn btn-light btn-lg my-4" %>
                </div>
            </div>        
        <% end %>
        <div class="col text-center mb-4">
           <%= link_to "Cancel and return to articles",articles_path, class: "text-secondary " %>
        </div>
    </div>
</div>