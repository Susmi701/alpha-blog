<h1 class="text-center m-4">Users</h1>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<div class="container ">
    <% @users.each do |user| %>
        <div class="row justify-content-md-center  ">
            <div class="col-6 mt-4  ">
                <div class="card text-center shadow mb-5 bg-body rounded">
                    <div class="card-header fst-italic ">
                         <%=link_to user.username ,user_path(user) ,class:"text-black text-decoration-none"%>
                    </div>
                    <div class="card-body ">
                        <%= gravatar_for user, size: 100 %>
                        <h5 class="card-title mt-3"><%= pluralize(user.articles.count,"article")%></h5>
                        <%= link_to 'View Profile', user_path(user),class: "btn btn-outline-success  " %>
                        <%= link_to 'Edit Profile', edit_user_path(user),class: "btn btn-outline-primary " %> 
                    </div>
                    <div class="card-footer text-muted  ">
                        <small>Joined <%= time_ago_in_words(user.created_at)%> ago,
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>     
</div>   
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>